{
    "name": "boily",
    "description": "Boilerplate for creating libraries with rollup",
    "version": "0.3.7",
    "license": "MIT",
    "author": {
        "name": "KFlash",
        "email": "kflash123@gmail.com"
    },
    "bugs": {
        "url": "https://github.com/kflash/boily/issues"
    },
    "devDependencies": {
        "babel-cli": "^6.3.17",
        "babel-loader": "^6.2.0",
        "babel-preset-es2015": "^6.3.13",
        "babel-preset-stage-0": "^6.3.13",
        "babel-register": "^6.3.13",
        "babel-preset-es2015-rollup": "^1.0.0",
        "babel-eslint": "^5.0.0-beta6",
        "babel-plugin-syntax-object-rest-spread": "^6.3.13",
        "babel-plugin-transform-object-rest-spread": "^6.3.13",
        "eslint": "^1.10.3",
        "eslint-loader": "^1.1.1",
        "isparta-instrumenter-loader": "^1.0.0",
        "karma": "^0.13.16",
        "karma-coverage": "^0.5.3",
        "karma-coveralls": "^1.1.2",
        "karma-mocha": "^0.2.1",
        "karma-mocha-reporter": "^1.1.3",
        "karma-sourcemap-loader": "^0.3.6",
        "karma-webpack": "^1.7.0",
        "karma-sinon-chai": "^1.1.0",
        "mocha": "^2.3.4",
        "mocha-loader": "^0.7.1",
        "mocha-lcov-reporter": "^1.0.0",
        "rollup": "^0.22.0",
        "rollup-plugin-babel": "^2.2.0",
        "rollup-plugin-replace": "^1.1.0",
        "rollup-plugin-npm": "^1.1.0",
        "rollup-plugin-commonjs": "^2.0.0",
        "uglify-js": "^2.6.1",
        "webpack": "^1.12.9",
        "webpack-dev-server": "^1.14.0",
        "npm-check-updates": "^2.5.5",
        "isparta": "^4.0.0"
    },
    "dependencies": {
        "babel-core": "^6.3.26",
        "babel-plugin-syntax-jsx": "^6.3.13",
        "karma-chrome-launcher": "^0.2.2",
        "pre-commit": "^1.1.2",
        "mkdirp": "^0.5.1",
        "rimraf": "^2.5.0",
        "dotenv": "^1.2.0"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "standard": {
        "parser": "babel-eslint",
        "ignore": [
            "dist"
        ]
    },
    "homepage": "https://github.com/kflash/boily#readme",
    "jsnext:main": "src/index.js",
    "keywords": [
        "boilerplate",
        "es2015",
        "rollup",
        "karma",
        "mocha",
        "workflow",
        "babel",
        "es6",
        "modules",
        "rollup",
        "bundle",
        "browser"
    ],
    "main": "dist/boily.min.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/kflash/boily"
    },
    "scripts": {
        "clean": "rimraf coverage/ dist/",
        "build": "npm run lint:source && npm run clean && mkdirp dist && babel-node config/rollup.config.js",
        "browser": "webpack-dev-server --quiet --config config/webpack.dev.conf.js --host 0.0.0.0",
        "test:browser": "karma start config/karma.conf.js --single-run",
        "test:server": "mocha --opts config/mocha.opts",
        "test:browser": "karma start config/karma.conf.js --single-run",
        "test": "npm run test:browser && npm run test:server",
        "lint": "eslint src/ test/shared test/server test/browser",
        "lint:fix": "eslint --fix ./src/**/*.js",
        "lint:shared": "eslint ./test/shared",
        "lint:server": "eslint ./test/server",
        "lint:browser": "eslint ./test/browser",
        "lint:source": "eslint ./src",
        "watch:server": "npm run test:server -- --watch",
        "watch:browser": "./node_modules/.bin/karma start --auto-watch --no-single-run",
        "packages": "npm list --depth=0",
        "package:purge": "rm -rf node_modules",
        "package:reinstall": "npm run package:purge && npm install",
        "package:check": "./node_modules/.bin/ncu",
        "package:upgrade": "./node_modules/.bin/ncu -u",
        "package:prod": "./node_modules/.bin/ncu -u",
        "package:dev": "./node_modules/.bin/ncu -p -u",
        "preversion": "[[ -z $(git status --porcelain) ]] && npm run build && git add -A dist && git commit -m 'Build lib'",
        "postpublish": "git push origin master --follow-tags",
        "release": "npm version ${BUMP:-\"patch\"} --no-git-tag-version && git add package.json && git commit -m \":octocat: Bump to $(cat package.json | jq -r .version)\" && git tag $(cat package.json | jq -r .version) && git push && git push --tags && npm publish",
        "check_env:mac": "node check_env.js",
        "check_env:win": "set NODE_ENV=development && node check_env.js",
        "test:unit:cov": "babel-node ./node_modules/.bin/isparta cover --report text --report html node_modules/mocha/bin/_mocha --recursive ./test/browser/**/*.js",
        "coverage:node": "babel-node node_modules/isparta/bin/isparta cover node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/node/**/*.js"

    },
    "pre-commit": [
        "test"
    ]
}